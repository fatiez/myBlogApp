<!--Page Header  -->
<header class="masthead"  style="background-image:url('https://cdn.pixabay.com/photo/2016/10/12/19/50/matrix-1735640_960_720.jpg');">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-8 mx-auto">
        <div class="site-heading">
          <h1>My Blog</h1>
          <span class="subheading">...</span>
        </div>
      </div>
    </div>
  </div>
</header>




<!-- Main Content -->
<div class="container">

  <% foundBlogs.forEach((blog) =>{  %>
  <div class="row">


    <div class="col-lg-3 mx-auto">
      <img class="img-thumbnail" src="<%=blog.comImage %>" alt="blog.image">
    </div>
    <div class="col-lg-9 mx-auto">
      <div class="post-preview">
        <a href="/blogs/<%= blog._id %>">
          <h2 class="post-title">
            <%= blog.title %>
          </h2>
          <h3 class="post-subtitle">
            <%= blog.comSentence %>
          </h3>
        </a>
        <p class="post-meta">Posted by
          <a href="#"> <%= blog.username %></a>
          <%= blog.date %></p>
      </div>
      <hr>

      <!-- Pager  -->
    </div>
  </div>
  <% }); %>
  <div class="clearfix">
    <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
  </div>

</div>

<%- include ("./partials/footer") %>